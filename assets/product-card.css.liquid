.product-card-link {
    text-decoration: none;
    color: inherit;
}
.product-card {
    cursor: pointer;
    transition: all 700ms;
}
.product-card:hover {
    background-color: rgb(250, 250, 250);
}
.product-card:hover .product-img {
    transform: scale(1.2);
}
.product-card .img-wrapper {
    width: 100%;
    height: 20rem;
    overflow: hidden;
    position: relative;
}
.product-card img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 1s;
}
.product-card .add-to-cart {
    width: 100%;
    padding: 17px 25px;
    border: none;
    background-color: #152424;
    color: whitesmoke;
    position: absolute;
    bottom: 0;
    translate: 0 100%;
    transition: all 0.7s;
    cursor: pointer;
    z-index: 1;
}
.product-card:hover .add-to-cart {
    transform: translateY(-100%);
}
.product-card .add-to-cart:hover {
    background-color: #313939;
    color: white;
}
.product-card .product-content {
    padding: 1rem;
}
.product-card .product-title {
    font-size: 23px;
    font-weight: 100;
    margin: 0px 0px 10px 0px;
}
.product-card .product-price {
    font-weight: 600;
    font-size: 13px;
    margin-top: 0px;
}

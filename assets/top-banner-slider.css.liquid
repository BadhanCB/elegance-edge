.top-banner {
    width: 100%;
    height: calc(100vh - 70px);
    position: relative;
    overflow: hidden;
}
.top-banner .slider {
    height: 100%;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(1, 100%);
    grid-auto-columns: 100%;
    grid-auto-flow: column;
    grid-template-rows: 100%;
    position: relative;
    transition: translate 1s;
}
.top-banner .slide-item {
    background-position: right;
    background-size: cover;
    position: relative;
}
.top-banner .product-content {
    position: absolute;
    width: 100%;
    height: 100%;
    padding: 4.5rem;
    background-color: rgba(230, 186, 255, 0.5);
    background-blend-mode: multiply;
}
.top-banner .product-content h3 {
    font-size: 4.5rem;
    margin: 0 0 1rem 0;
    color: white;
}
.top-banner .product-content p {
    width: 50%;
    margin: 0;
    font-size: 1.5rem;
    font-weight: 300;
    color: rgb(24, 40, 40);
}
.top-banner .product-content .price {
    margin: 30px 0;
    font-size: 25px;
}
.top-banner .product-content button {
    font-size: 20px;
    font-weight: 100;
    padding: 10px 20px;
    margin-top: 30px;
    border: none;
    background-color: white;
    color: darkslategray;
    cursor: pointer;
    position: relative;
    transition: all 0.5s;
}
.top-banner .product-content button:hover {
    background-color: darkslategray;
    color: whitesmoke;
}
.top-banner .prev,
.top-banner .next {
    cursor: pointer;
    background-color: transparent;
    border: none;
    position: absolute;
    top: 50%;
    translate: 0 -50%;
    z-index: 999;
}
.top-banner .prev {
    left: 0;
}
.top-banner .next {
    right: 0;
}
.top-banner .prev:hover,
.top-banner .next:hover {
    transform: scaleY(1.3);
}
.top-banner svg {
    width: 30px;
    height: 30px;
}

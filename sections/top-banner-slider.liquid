{{ 'top-banner-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'top-banner-slider.js' | asset_url }}" defer></script>

<section class="top-banner">
  <div class="slider">
    {% for product in collections['banner-slider-items'].products limit: 3 %}
      <div class="slide-item" style="background-image: url('{{ product.featured_image | image_url }}')">
        <div class="product-content">
          <h3>{{ product.title }}</h3>
          <p>{{ product.description }}</p>
          <P class="price">{{ product.price | money }}</P>
          <a href="{{ product.url }}"><button>Buy Now</button></a>
        </div>
      </div>
    {% endfor %}
  </div>
  <button class="prev">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
    </svg>
  </button>
  <button class="next">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
    </svg>
  </button>
  {% comment %}
    <div class="buttons">
      <button class="prev">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
        </svg>
      </button>
      <button class="next">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
      </button>
    </div>
  {% endcomment %}
</section>
{% schema %}
{
  "name": "Top Banner Slider",
  "presets": [{ "name": "Top Banner Slider" }]
}
{% endschema %}
